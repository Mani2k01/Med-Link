    <%= count %>
</script>

<script>
/* ================= ELEMENT REFERENCES ================= */
const doctorFilter = document.getElementById("doctorFilter");
const periodFilter = document.getElementById("periodFilter");
const monthFilter = document.getElementById("monthFilter");
const yearFilter = document.getElementById("yearFilter");
const appointmentCards = document.querySelectorAll(".appointment-card");
const noAppointments = document.getElementById("noAppointments");
const appointmentCountLabel = document.getElementById("appointmentCountLabel");

/* ================= BACKEND DATA ================= */
const totalCount = JSON.parse(
    document.getElementById("total-count-data").textContent
);

/* ================= DOCTOR NAME MAP ================= */
const doctorNameMap = {};
doctorFilter.querySelectorAll("option").forEach(opt => {
    if (opt.value !== "all") {
        doctorNameMap[opt.value] = opt.textContent.trim();
    }
});

/* ================= POPULATE YEAR DROPDOWN ================= */
(function populateYears() {
    const currentYear = new Date().getFullYear();
    for (let y = currentYear; y >= currentYear - 10; y--) {
        const opt = document.createElement("option");
        opt.value = y;
        opt.textContent = y;
        yearFilter.appendChild(opt);
    }
})();

/* ================= DATE HELPERS ================= */
function isInThisWeek(date) {
    const now = new Date();
    const start = new Date(now);
    start.setDate(now.getDate() - now.getDay());
    start.setHours(0, 0, 0, 0);

    const end = new Date(start);
    end.setDate(start.getDate() + 6);
    end.setHours(23, 59, 59, 999);

    return date >= start && date <= end;
}

function isInThisMonth(date) {
    const now = new Date();
    return date.getMonth() === now.getMonth() &&
           date.getFullYear() === now.getFullYear();
}

function isInThisYear(date) {
    return date.getFullYear() === new Date().getFullYear();
}

/* ================= FILTER LOGIC ================= */
function applyFilters() {

    const selectedDoctor = doctorFilter.value;
    const selectedPeriod = periodFilter.value;
    const selectedMonth = monthFilter.value;
    const selectedYear = yearFilter.value;

    let visibleCount = 0;

    appointmentCards.forEach(card => {

        const cardDoctor = card.dataset.doctorId;
        const cardDate = new Date(card.dataset.date);

        const doctorMatch =
            selectedDoctor === "all" || cardDoctor === selectedDoctor;

        let dateMatch = true;

        if (selectedMonth) {
            const [y, m] = selectedMonth.split("-");
            dateMatch =
                cardDate.getFullYear() === parseInt(y) &&
                cardDate.getMonth() === parseInt(m) - 1;
        }
        else if (selectedYear) {
            dateMatch = cardDate.getFullYear() === parseInt(selectedYear);
        }
        else {
            if (selectedPeriod === "week") {
                dateMatch = isInThisWeek(cardDate);
            } else if (selectedPeriod === "month") {
                dateMatch = isInThisMonth(cardDate);
            } else if (selectedPeriod === "year") {
                dateMatch = isInThisYear(cardDate);
            }
        }

        if (doctorMatch && dateMatch) {
            card.style.display = "flex";
            visibleCount++;
        } else {
            card.style.display = "none";
        }
    });

    noAppointments.style.display = visibleCount === 0 ? "block" : "none";

    if (selectedDoctor === "all") {
        appointmentCountLabel.innerText = `Treatment's Done: ${visibleCount}`;
        appointmentCountLabel.classList.remove("doctor");
        appointmentCountLabel.classList.add("total");
    } else {
        const doctorName = doctorNameMap[selectedDoctor] || "Doctor";
        appointmentCountLabel.innerText =
            `Treatment's Done By Dr. ${doctorName}: ${visibleCount}`;
        appointmentCountLabel.classList.remove("total");
        appointmentCountLabel.classList.add("doctor");
    }
}

/* ================= CLEAR CONFLICTING FILTERS ================= */
monthFilter.addEventListener("change", () => {
    yearFilter.value = "";
    periodFilter.value = "month";
    applyFilters();
});

yearFilter.addEventListener("change", () => {
    monthFilter.value = "";
    periodFilter.value = "year";
    applyFilters();
});

/* ================= EVENTS ================= */
doctorFilter.addEventListener("change", applyFilters);
periodFilter.addEventListener("change", () => {
    monthFilter.value = "";
    yearFilter.value = "";
    applyFilters();
});

/* ================= PAGE LOAD ================= */
document.addEventListener("DOMContentLoaded", () => {
    appointmentCountLabel.innerText = `Treatment's Done: ${totalCount}`;
    appointmentCountLabel.classList.add("total");
    applyFilters();
});
</script>

</body>
</html>
