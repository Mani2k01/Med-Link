<% if (user === 'clinic') { %>
<script type="application/json" id="doctor-count-data">
    <%= JSON.stringify(doctor_count) %>
</script>
<% } %>

<script type="application/json" id="total-count-data">
    <%= JSON.stringify(count) %>
</script>

<script>
const backendAlert = "<%= typeof js_alert !== 'undefined' ? js_alert : '' %>";
if (backendAlert) alert(backendAlert);

const doctorFilter = document.getElementById("doctorFilter");
const dateFilter = document.getElementById("dateFilter");
const appointmentCards = document.querySelectorAll(".appointment-card");
const noAppointments = document.getElementById("noAppointments");
const appointmentCountLabel = document.getElementById("appointmentCountLabel");

const changeDoctorBtn = document.getElementById("changeDoctorBtn");
const doctorSelect = document.getElementById("doctorSelect");
const proceedBtn = document.getElementById("proceedBtn");

if (changeDoctorBtn && doctorSelect && proceedBtn) {
    changeDoctorBtn.addEventListener("click", () => {
        doctorSelect.style.display = "block";
        proceedBtn.style.display = "block";
    });

    proceedBtn.addEventListener("click", function (e) {
        const checked = document.querySelectorAll(".appointment-checkbox:checked");
        if (checked.length === 0) {
            alert("Please select at least one appointment");
            e.preventDefault();
        }
    });
}

const totalCount = JSON.parse(
    document.getElementById("total-count-data").textContent
);

const doctorNameMap = {};
if (doctorFilter) {
    doctorFilter.querySelectorAll("option").forEach(opt => {
        if (opt.value !== "all") {
            doctorNameMap[opt.value] = opt.textContent.trim();
        }
    });
}

document.addEventListener("DOMContentLoaded", () => {
    const today = new Date().toISOString().split("T")[0];
    dateFilter.value = today;

    appointmentCountLabel.innerText = `Appointments: ${totalCount}`;
    appointmentCountLabel.classList.add("total");

    applyFilters();
});

function applyFilters() {

    const selectedDoctor = doctorFilter ? doctorFilter.value : "all";
    const selectedDate = dateFilter.value;

    let visibleCount = 0;

    appointmentCards.forEach(card => {
        const cardDoctor = card.dataset.doctorId;
        const cardDate = card.dataset.date;

        const doctorMatch =
            selectedDoctor === "all" || cardDoctor === selectedDoctor;

        const dateMatch =
            !selectedDate || cardDate === selectedDate;

        if (doctorMatch && dateMatch) {
            card.style.display = "flex";
            visibleCount++;
        } else {
            card.style.display = "none";
        }
    });

    noAppointments.style.display = visibleCount === 0 ? "block" : "none";

    if (selectedDoctor === "all") {
        appointmentCountLabel.innerText = `Appointments: ${visibleCount}`;
        appointmentCountLabel.classList.remove("doctor");
        appointmentCountLabel.classList.add("total");
    } else {
        const doctorName = doctorNameMap[selectedDoctor] || "Doctor";
        appointmentCountLabel.innerText =
            `Dr. ${doctorName} Appointments: ${visibleCount}`;
        appointmentCountLabel.classList.remove("total");
        appointmentCountLabel.classList.add("doctor");
    }
}

if (doctorFilter) {
    doctorFilter.addEventListener("change", applyFilters);
}
dateFilter.addEventListener("change", applyFilters);

function singleAction(action, appointmentId) {
    const form = document.createElement("form");
    form.method = "POST";
    form.action = "/view_appointment/action";

    form.innerHTML = `
        <input type="hidden" name="action" value="${action}">
        <input type="hidden" name="appointment_id" value="${appointmentId}">
    `;

    document.body.appendChild(form);
    form.submit();
}

function processAppointment(button, action) {
    const card = button.closest(".appointment-card");

    const appointmentId = card.dataset.appointmentId;
    const patientId     = card.dataset.patientId;
    const clinic        = card.dataset.clinic;

    const form = document.createElement("form");
    form.method = "POST";
    form.action = "/view_appointment/action";

    form.innerHTML = `
        <input type="hidden" name="action" value="${action}">
        <input type="hidden" name="appointment_id" value="${appointmentId}">
        <input type="hidden" name="patient_id" value="${patientId}">
        <input type="hidden" name="clinic" value="${clinic}">
    `;

    document.body.appendChild(form);
    form.submit();
}
</script>

</body>
</html>
