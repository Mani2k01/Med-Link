<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Appointment</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --brand: #009688;
            --brand-dark: #00796b;
            --bg: #f4fbfa;
            --nav-h: 60px;
            --footer-h: 60px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: var(--bg);
            color: #333;
            min-height: 100vh;
        }

        /* ================= NAVBAR ================= */

        .navbar {
            position: fixed;
            inset: 0 0 auto 0;
            height: var(--nav-h);
            background: var(--brand);
            color: #fff;
            display: flex;
            align-items: center;
            padding: 0 24px;
            box-shadow: 0 2px 10px rgba(0, 0, 0, .15);
            z-index: 1000;
        }

        .navbar .title {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 20px;
            font-weight: 600;
        }

        .navbar .actions {
            margin-left: auto;
            display: flex;
            gap: 18px;
            font-size: 22px;
        }

        .navbar a {
            color: #e0f2f1;
            text-decoration: none;
        }

        .navbar a:hover {
            color: #fff;
        }

        /* ================= MAIN ================= */

        main {
            flex: 1 1 auto;
            overflow-y: auto;
            padding: 20px;
        }

        .hero {
            background: linear-gradient(135deg, var(--brand), var(--brand-dark));
            color: #fff;
            padding: 48px 20px;
        }

        .hero-inner {
            max-width: 1100px;
            margin: auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            align-items: center;
        }

        .hero h1 {
            font-size: 34px;
            margin-bottom: 12px;
        }

        .hero p {
            font-size: 16px;
            opacity: .95;
        }

        /* ================= FORM CARD ================= */

        .card {
            background: #fff;
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, .1);
        }

        .card h2 {
            margin-bottom: 20px;
            color: var(--brand-dark);
            font-size: 24px;
            text-align: center;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        .form-grid input,
        .form-grid select {
            width: 100%;
            height: 48px;
            padding: 0 14px;
            border-radius: 10px;
            border: 1px solid #ddd;
            background: #fafafa;
            font-size: 14px;
        }

        .form-grid input:focus,
        .form-grid select:focus {
            outline: none;
            border-color: var(--brand);
            background: #fff;
        }

        .form-grid .full {
            grid-column: 1 / -1;
        }

        .btn {
            width: 100%;
            height: 50px;
            border: none;
            border-radius: 25px;
            background: linear-gradient(90deg, var(--brand), var(--brand-dark));
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform .2s, box-shadow .2s;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(0, 150, 136, .35);
        }

        /* ================= FOOTER ================= */

        .footer {
            position: fixed;
            inset: auto 0 0 0;
            height: var(--footer-h);
            background: var(--brand);
            color: #e0f2f1;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
        }

        /* ================= RESPONSIVE ================= */

        @media (max-width: 900px) {
            .hero-inner {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 520px) {
            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <header class="navbar">
        <div class="title">
            <i class="fa-solid fa-stethoscope"></i>
            <span>Doctor Dashboard</span>
        </div>
        <nav class="actions">
            <a href="/redirect_profile" title="Profile">
                <i class="fa-regular fa-circle-user"></i>
            </a>
            <a href="/back" title="Logout">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
            </a>
        </nav>
    </header>

    <!-- MAIN -->
    <main>
        <section class="hero">
            <div class="hero-inner">
                <div>
                    <h1>Book an Appointment</h1>
                    <p>Schedule doctor appointments easily for you and your family.</p>
                </div>

                <form action="/make_appointment/action" method="post" class="card">
                    <h2>Appointment Details</h2>

                    <div class="form-grid">

                        <select name="department" required>
                            <option value="">Choose Department</option>
                            <option>General Medicine</option>
                            <option>Orthopedics</option>
                            <option>Gynecology & Obstetrics</option>
                            <option>Pediatrics</option>
                            <option>Cardiology</option>
                            <option>Neurology</option>
                            <option>Pulmonology</option>
                            <option>Nephrology</option>
                            <option>ENT</option>
                            <option>Ophthalmology</option>
                            <option>Oncology</option>
                            <option>Psychiatry</option>
                            <option>Urology</option>
                        </select>

                        <select id="doctor" name="doctor" required>
                            <option value="">Select Doctor</option>

                            <% results.forEach(function(doc){ %>
                                <option
                                    value="<%= doc[1] %>"
                                    data-department="<%= doc[4] %>"
                                    data-hospital="<%= doc[6] %>"
                                    data-address="<%= doc[7] %>"
                                >
                                    Dr. <%= doc[2] %> (<%= doc[5] %> yrs exp)
                                </option>
                            <% }) %>
                        </select>

                        <input type="text" id="hospital" name="hospital"
                            placeholder="Hospital Name" readonly />

                        <input type="text" id="hospital_address" name="hospital_address"
                            placeholder="Hospital Address" readonly />

                        <input type="text" name="patient_name" placeholder="Patient Name" required />
                        <input type="email" name="email" placeholder="Email Address" required />
                        <input type="date" name="appointment_date" required />
                        <input type="time" name="appointment_time" required />

                        <div class="full">
                            <input type="text" name="Reason_for_visit"
                                placeholder="Reason for visit" required /><br><br>

                            <button class="btn" type="submit">
                                ðŸ“… Make Appointment
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        Â© 2025 VEDSP Inventive Private Limited. All rights reserved.
    </footer>

    <script>
        // Backend alert (EJS version)
        const backendAlert = "<%= typeof js_alert !== 'undefined' ? js_alert : '' %>";
        if (backendAlert) {
            alert(backendAlert);
        }

        // Auto-fill hospital and address based on selected doctor
        const doctorSelectEl = document.getElementById("doctor");
        const hospitalInput = document.getElementById("hospital");
        const addressInput = document.getElementById("hospital_address");

        doctorSelectEl.addEventListener("change", function() {
            const selectedOption = this.options[this.selectedIndex];
            hospitalInput.value = selectedOption.dataset.hospital || "";
            addressInput.value = selectedOption.dataset.address || "";
        });

        // Filter doctors by department
        const departmentSelect = document.querySelector('select[name="department"]');
        const doctorSelect = document.getElementById('doctor');
        const doctorOptions = doctorSelect.querySelectorAll('option');

        doctorSelect.disabled = true;

        departmentSelect.addEventListener("change", function() {
            const selectedDept = this.value.toLowerCase();

            doctorSelect.disabled = !selectedDept;
            doctorSelect.value = "";

            doctorOptions.forEach(option => {
                const dept = option.dataset.department
                    ? option.dataset.department.toLowerCase()
                    : "";

                if (!dept) {
                    option.hidden = false;
                    return;
                }

                option.hidden = dept !== selectedDept;
            });
        });
    </script>

</body>
</html>
